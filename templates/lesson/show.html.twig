{% extends 'base.html.twig' %}

{% block title %}{{ lesson.LessonName }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>{{ lesson.LessonName }}</h1>

        <p>
            Курс: <a href="{{ path('app_course_show', {'id': course.id}) }}">{{ course.CourseName }}</a>
        </p>


        {% if is_granted("ROLE_SUPER_ADMIN") %}
            <div class="btn-group">
                <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}" class="btn btn-outline-secondary"
                   style="margin-right: 0.5rem; border-radius: 0.25rem;">Редактировать</a>

                {{ include('lesson/_delete_form.html.twig') }}
            </div>
        {% endif %}


        <div class="card" style="margin-top: 1rem;">
            <div class="card-text" style="padding: 0.5rem;">
                {{ lesson.LessonContent }}
            </div>
        </div>

    </div>
{% endblock %}
