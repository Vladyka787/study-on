{% extends 'base.html.twig' %}

{% block title %}{{course.CourseName}}{% endblock %}

{% block body %}
    <h1>{{course.CourseName}}</h1>
    <p>{{course.CourseDescription}}</p>

    <h2>Уроки</h2>

    {% for lesson in lessons %}
        <p>
            <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.LessonName }}</a>
        </p>
    {% endfor %}


    <div class="line">-----------------------------------------</div>

    <a href="{{ path('app_course_index') }}">К списку курсов</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать курс</a>

    <a href="{{ path('app_lesson_new', {'course_id': course.id}) }}">Добавить урок</a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
